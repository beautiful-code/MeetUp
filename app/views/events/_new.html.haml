= form_for (@event), remote: true, html: {id: "new_event_form"} do |f|
  .field
    =f.label :name
    =f.text_field :name

  .field
    =f.label :group
    =f.collection_select :group_id, @groups, :id, :name, include_blank: false

  .field
    =f.label :start_at
    .date= f.text_field :start_at, placeholder: "Select Time"

  .field
    =f.label :end_at
    .date= f.text_field :end_at, placeholder: "Select Time"

  .actions
    =f.submit "Create", class: 'btn btn-primary'

:javascript
  $('#event_start_at').datetimepicker({format: "YYYY-MM-DD HH:mm:ss"});
  $('#event_end_at').datetimepicker({format: "YYYY-MM-DD HH:mm:ss"});

:css
  @font-face {
    font-family: 'Glyphicons Halflings';
    src: url(asset_path('glyphicons-halflings-regular.eot'));
    src: url(asset_path('glyphicons-halflings-regular.eot?#iefix')) format('embedded-opentype'), url(asset_path('glyphicons-halflings-regular.woff')) format('woff'), url(asset_path('glyphicons-halflings-regular.ttf')) format('truetype'), url(asset_path('glyphicons-halflings-regular.svg#glyphicons_halflingsregular')) format('svg');
  }
